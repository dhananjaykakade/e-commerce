    <!-- **************************************************************************************************** -->
    <% categories.forEach(category=> { %>

        <section id="sneakers">

            <div class="mainpro">
                <h2>
                    <%= category.name %>
                </h2>
            </div>
            <div class="container">

                <% products.filter(product=> product.category === category.name).forEach(product => { %>
                    <a type="submit" href="/product/<%= encodeURIComponent(product._id) %>">
                        <div class="pro">

                            <img src="<%= product.imageUrls[0] %>" class="pro-img">

                            <div class="pro-content">
                                <h2>
                                    <%= product.name %>
                                </h2>
                                <p>₹<%= product.price %> M.R.P: <del>₹<%= product.offer_price %></del> (<%=
                                            product.discount %>% off)</p>
                               
                            </div>
                        </div>
                    </a>
                    <% }); %>
            </div>
        </section>
        <% }); %>
