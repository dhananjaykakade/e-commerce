                <input id="password" type="password" name="password" class="input-field" placeholder="Enter Password" onkeyup="validatePassword()" required>
                <button type="button" id="eyeOpen" class="input-icon"><i class="fa-regular fa-eye"></i></button>
                <button type="button" id="close" class="input-icon"><i class="fa-regular fa-eye-slash"></i></button>
                <span id="pass-err-register"></span><br><br>

        
