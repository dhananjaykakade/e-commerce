<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/payment/payment.css">
    <title>Document</title>


</head>

<body>
    <div class="main-container">
        <div class="container">
            <div class="timer">
                <span id="timer"></span>
            </div>


            <form action="#" id="myForm">
                <h4 style="text-align: center; padding: 20px; font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;">Transaction id <span><%= id%></span> </h4>
                <div class="img-container">




                    <label>
                        <input type="radio" name="payment" value="card" checked>
                        <img src="../assets/payment/card.png" alt="Option 1">
                    </label>

                    <label>
                        <input type="radio" name="payment" value="upi">
                        <img src="../assets/payment/upi.png" alt="Option 2">
                    </label>
                    <label>
                        <input type="radio" name="payment" value="qr">
                        <img src="../assets/payment/netbanking.png" alt="Option 3">
                    </label>
                </div>
                <div class="btn">

                    <input id="btn" type="button" value="Go to payment" onclick="submitForm()">
                   
                </div>
            </form>
            <h4>
                <span>this is demo payment method please do not submit original details</span>

            </h4>

        </div>

    </div>




    <script>
        function submitForm() {
            const selectedPayment = document.querySelector('input[name="payment"]:checked').value;

            // Redirect based on selected payment option
            switch (selectedPayment) {
                case 'card':
                    window.location.href = '/payment/card/<%= encodeURIComponent(user._id) %>/<%= total %>';
                    break;
                case 'upi':
                    window.location.href = '/payment/upi/<%= encodeURIComponent(user._id) %>/<%= total %>';
                    break;
                case 'qr':
                    window.location.href = '/payment/netBanking/<%= encodeURIComponent(user._id) %>/<%= total %>';
                    break;
                default:
                    // Handle default case or error
                    break;
            }
        }

    </script>

</body>

</html>